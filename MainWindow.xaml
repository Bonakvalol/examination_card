<Window x:Class="examination_card1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:examination_card1"
        mc:Ignorable="d"
        Title="Оценка экзамена" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Введите баллы за задания:" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel>
                <TextBlock Text="Задание 1 (0-10)" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="txtScore1" Margin="0,5"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Задание 2 (0-50)" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="txtScore2" Margin="0,5"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Задание 3 (0-30)" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="txtScore3" Margin="0,5"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Задание 4 (0-10)" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="txtScore4" Margin="0,5"/>
            </StackPanel>

            <Button Content="Рассчитать" Click="CalculateGrade" Margin="0,10"/>
            <Label x:Name="lblResult" FontSize="14" FontWeight="Bold" Foreground="DarkBlue"/>
        </StackPanel>
    </Grid>
</Window>